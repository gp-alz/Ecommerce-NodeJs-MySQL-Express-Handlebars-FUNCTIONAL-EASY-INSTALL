        </div>
      </form>
    </div>


    </nav>
    <div class="products-list">

      
      {{# each products}}
        <form class="product">
          <div class="labels">
            
            
          </div>
          
          <img src="/img/products/{{this.img_url}}" alt="{{this.name}}" class="product-img">
          <p class="name">{{this.name}}</p>
          
          
          <p class="promotioned">Tecnología</p>
          

          <div class="price">
            <p class="price-value">$ {{this.price}}</p>
          </div>

          <label class="name">
            <a href="/add-to-cart/{{this.id}}">
              <img src="/img/icons/ic_shopping_cart.png" alt="Add to cart">
            <p class="filtro" >Agregar al carrito</p>
          </a>
          </label>
          
        </form>
      {{/each}}
    </div>


    
